@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Assets/style/login-register.css">
    <title>Sign In</title>
</head>
<body class="body" style="background-image: url(../Assets/images/pretty-book-bench-nature-water-outdoors-animated-gif.gif);">
   
<section class="signIn">
    <div class="login">
        <div class="alert alert-danger" asp-validation-summary="ModelOnly" style="z-index:100;opacity:0.5;width:25%"></div>
        <form method="post" style="overflow:visible;">
            <h3>Login Here</h3>
    
            <label for="username">Username</label>
            <input asp-for="Username" type="text" placeholder="Username" id="username">
            <span class="text text-dark" asp-validation-for="Username"></span>
            <label for="password">Password</label>
            <input asp-for="Password" type="password" placeholder="Password" id="password">
            <span class="text text-dark" asp-validation-for="Password"></span>
            <div class="check-remember">
                <input asp-for="RememberMe" class="checkbox" type="checkbox">
                <span asp-for="RememberMe" class="remember">Remember me?</span>
                <a asp-action="forgotpassword" asp-controller="account" class="forget">Forgot Password?</a>
            </div>
            <button>Log In</button>
            <span class="need-account">Need an Account? <a asp-controller="account" asp-action="register"> SIGN UP</a></span>
        </form>
    </div>
    
</section>



</body>
</html>

