@model UserEditVM
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Assets/style/login-register.css">
    <title>Sign Up</title>
</head>

<body class="regstr body" style="background-image: url(../Assets/images/4A2aZE.gif);">
   <a asp-controller="home" asp-action="index" style="position:fixed; top:20px;right:20px;text-decoration:none; align-items:center;">
       <i class="fas fa-long-arrow-alt-right"></i>
		<i class="fas fa-home" style="font-size:25px;color:brown;"></i>
		
	</a>
    <section class="signUp">
        <div class="register">
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" style="height:52rem;margin-top:5rem;">
                <h3>Register Here</h3>

                <div class="name-surname">
                    <div class="name">
                        <label for="name">Name</label>
                        <input asp-for="Name" type="text"  id="name">
                        <span class="text-dark text" style="color:yellow;" asp-validation-for="Name"></span>
                    </div>
                    <div class="surname">
                        <label for="surname">Surname</label>
                        <input asp-for="Surname" type="text"  id="surname">
                        <span class="text-dark text" asp-validation-for="Surname"></span>
                    </div>
                </div>
                <div class="username-email">
                    <div class="username">
                        <label for="username">Username</label>
                        <input asp-for="Username" type="text"  id="username">
                        <span class="text-warning text" asp-validation-for="Username"></span>
                    </div>
                    <div class="mail">
                        <label for="email">Email</label>
                        <input asp-for="Email" type="email"  id="email">
                        <span class="text-warning text" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="password">
                        <label for="password">Current Password</label>
                        <input asp-for="CurrentPassword" type="password"  style="width:94%;">
                        <span class="text-warning text" asp-validation-for="CurrentPassword"></span>
                </div>
                <div class="password-confirm">
                    
                     <div class="password">
                        <label for="password">New Password</label>
                        <input asp-for="Password" type="password"  id="password">
                        <span class="text-warning text" asp-validation-for="Password"></span>
                    </div>
                    <div class="confirm">
                        <label for="password">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password"  id="password">
                        <span class="text-warning text" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                
                <button>Sign Up</button>
                <span class="need-account">Already Have an Account? <a asp-controller="account" asp-action="login"> SIGN IN</a></span>
            </form>
        </div>

    </section>



</body>

</html>


