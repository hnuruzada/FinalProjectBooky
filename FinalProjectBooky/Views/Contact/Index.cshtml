 @model Contact
@{
    ViewData["Title"] = "Index";
}

@section CSS{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
}

<main style="background: url(../Assets/images/banner-bg.jpg) no-repeat;background-size: cover;background-position: center;">
    <section class="contact-title">
        <div class="container">
            <div class="title">
                <h1>Contact</h1>
            </div>
        </div>
    </section>
    <section class="google-map">
        <div class="mapouter">
            <div class="gmap_canvas">
                <iframe id="gmap_canvas"
                        src="https://maps.google.com/maps?q=Azerbaijan&t=&z=13&ie=UTF8&iwloc=&output=embed"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                <a href="https://www.embedgooglemap.net/blog/divi-discount-code-elegant-themes-coupon/"></a>
                <br>

                <a href="https://www.embedgooglemap.net">add google maps to html</a>

            </div>
        </div>
    </section>
    <section class="send-message-and-contact">
        <div class="container">
            <div class="row">

                <div class="col col-lg-12 send-message">
                    <h1>Contact Us</h1>
                    <div class="forms">
                        <form asp-action="message" asp-controller="contact" method="post">

                            <div class="name">
                                <label for="">Name</label><br>
                                <input type="text">
                            </div>
                            <div class="email">
                                <label for="">Email</label><br>
                                <input type="email" name="email" id="email">
                            </div>
                            <div class="subject">
                                <label for="">Subject</label><br>
                                <input type="text">
                            </div>
                            <div class="message">
                                <label for="">Message</label><br>
                                <textarea name="message" id="message" id="" cols="30" rows="10"></textarea>
                            </div>

                            <div class="submit">
                                <button type="submit" data-text="send">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
     <script src="~/Assets/js/contact.js"></script>
}
