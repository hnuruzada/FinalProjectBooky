@model AuthorVM


    @foreach (var ab in Model.Author.AuthorBooks)
   {
        <div class="col col-lg-3 col-md-4 col-sm-6 col-xs-12 col-12 blogBox moreBox" style="display:none;">
                <div class="card">
                    <div class="card-header">
                        <img src="~/Assets/images/@ab.Book.Image" alt="...">
                    </div>
                    <div class="card-body">
                <h5 class="card-title">@if (ab.Book.Name.Length > 20)
                    {
                        @(ab.Book.Name.Substring(0,20)+"...")                   
                    }
                    else
                    {
                        @ab.Book.Name
                    }
                </h5>
                        <span class="card-text">$@ab.Book.Price</span>
                @if (User.Identity.IsAuthenticated)
                {
                    <a  class="btn btn-primary addToCart"asp-controller="book" asp-action="addbasket" asp-route-id="@ab.Book.Id">Add To Cart</a>
                }
                else
                {
                    <a  class="btn btn-primary" asp-controller="account" asp-action="login">Add To Cart</a>
                }
            </div>
                </div>
            </div>
   }