@model List<Author>


     @foreach (Author author in Model.Skip(Model.Count-6).Take(6))
           {
               <div class="col col-lg-2 col-md-4">
                <div class="author">
                    <div class="author-img" >
                        <img style="width:150px;height:150px" src="~/Assets/images/@author.Image" alt="">
                    </div>
                    <div class="author-info">
                <h4>
                        @(author.Name.Substring(0,1) + ".") @author.Surname
                </h4>
                        <span>@author.AuthorBooks.Count Books</span>
                        <a asp-controller="author" asp-action="index" asp-route-id="@author.Id">View Profile</a>
                    </div>
                </div>
            </div>
           }