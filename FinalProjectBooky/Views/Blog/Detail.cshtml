@model Blog
@{
    ViewData["Title"] = "Detail";
}


@section CSS{
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

}


<section class="blog-detail-title">
    <div class="container">
        <div class="title">
            <h1>Blog Detail</h1>
        </div>
    </div>
</section>
<section class="blog-img">
    <div class="image">
        <img src="~/Assets/images/@Model.Image" alt="">
    </div>
</section>
<section class="blog-detail-image">
    <div class="parallax" style="background: url(/Assets/images/@Model.Image) no-repeat;">
        
    </div>
</section>
<section class="posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 post-side">
                <div class="post">
                    <div class="post-title">
                        <h1 style="display:flex; justify-content:center;">@Model.Title</h1>
                    </div>
                    <div class="post-date-publisher">
                        <span>Post by <a href="">@Model.Publisher.Name @Model.Publisher.Surname</a> at <span>@Model.Date.ToString("MMMM dd,yyyy") </span>| <a href=""> <i class="fas fa-comments"></i><span>(3)</span></a></span>

                    </div>
                    <div class="post-description">
                        <p>@Model.Description</p>
                    </div>

                </div>
                <div class="reviews">
                    <div class="comments">
                        <h2 class="reviews-title">Reviews</h2>
                        <ul class="commentlist">
                            <li class="comment-even">
                                <div id="comment-1" class="comment_container">
                                    <div class="comment-text">
                                        <p class="info">
                                            <span class="author">Joshua Garcia </span>
                                            <span class="time">27.04.2018</span>
                                        </p>
                                        <div class="description">
                                            <p>
                                                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean
                                                commodo ligula eget dolor. Aenean massa. Cum sociis Theme
                                                natoque penatibus et magnis dis parturient montes, nascetur
                                                ridiculus mus.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="comment-odd">
                                <div id="comment-2" class="comment_container">
                                    <div class="comment-text">
                                        <p class="info">
                                            <span class="author">Joan Stanley </span>
                                            <span class="time">27.04.2018</span>
                                        </p>
                                        <div class="description">
                                            <p>
                                                Etiam rhoncus. Maecenas tempus, tellus eget condimentum rhoncus,
                                                sem quam semper libero, sit amet adipiscing sem neque sed ipsum.
                                                Nam quam nunc, blandit vel, luctus pulvinar, hendrerit
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>

                    </div>
                </div>
                <div class="comment-form">
                    <div class="reviewtitle">
                        <h1>Add a review</h1>
                        <div class="form">
                            <form>
                                <div class="input">

                                    <p>Your review *</p>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                </div>

                                <div class="input">
                                    <label for="exampleInputPassword1" class="form-label">Name*</label>
                                    <input type="text" class="form-control" id="exampleInputPassword1">
                                </div>
                                <div class="input">
                                    <label for="exampleInputEmail1" class="form-label">Email*</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1"
                                           aria-describedby="emailHelp">
                                </div>


                                <button type="submit" class="btn">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 sidebars">
                <div class="author">
                    <div class="header-author">
                        <h1>About Author</h1>
                    </div>
                    <div class="body-author">
                        <div class="author-img">
                            <img src="~/Assets/images/@Model.Publisher.Image" alt="">
                        </div>
                        <div class="author-info">
                            <div class="title">
                                <h3>@Model.Publisher.Name @Model.Publisher.Surname</h3>
                            </div>
                            <div class="description">
                                <p>
                                    @Model.Publisher.Resume

                                </p>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="categories">
                    <h2>Categories</h2>
                    <ul>
                        @foreach (Category category in ViewBag.Categories)
                       {
                           <li><a asp-controller="blog" asp-action="categoryblog" asp-route-Id="@category.Id">@category.Name (@category.Blogs.Count)</a></li>
                       }
                      
                    </ul>
                </div>
                <div class="blog-posts">
                    <h2>Blog posts</h2>
                    @foreach (Blog blog in ViewBag.Blogs)
                   {
                       <div class="post-item">
                        <div class="post-img">
                            <img src="~/Assets/images/@blog.Image" alt="">
                        </div>
                        <div class="post-info">
                            <div class="description">
                                <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.Id"> @if (blog.Description.Length < 100)
                    {
                       @blog.Description

                    }
                    else
                    {
                        @(blog.Description.Substring(0,100) + "...")
                    }</a>
                            </div>
                            <div class="date">
                                <span>@blog.Date.ToString("MMMM dd,yyyy")</span>
                            </div>
                        </div>
                    </div>
                   }
                   
                </div>
                <div class="tags">
                    <h2>Tags</h2>
                    <div class="tag-links row">
                        @foreach (Tag tag in ViewBag.Tags)
                       {
                           <div class="link col col-lg-3 col-md-4 col-sm-6 col-4"><a asp-controller="blog" asp-action="tagblog" asp-route-id="@tag.Id">@tag.Name</a></div>
                       }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script src="~/Assets/js/blog-detail.js"></script>
}