@model Setting
@{
    ViewData["Title"] = "Index";
}
@section Css{
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Settings</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                              
                                <th>
                                    Header Logo
                                </th>
                                
                                <th>
                                    Web Name
                                </th>
                                <th>
                                    Parallax Image
                                </th>
                                
                                <th>
                                    Footer Image
                                </th>
                               
                                
                                <th>
                                   Phone Number 1
                                </th>
                                <th>
                                    Phone Number 2
                                </th>
                                 <th>
                                     Email
                                </th>
                                <th>
                                     Social Media
                                </th>

                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                               
                                <td>
                                    <img src="~/Assets/images/@Model.Logo" style="width:100px;height:80px;"/>
                                </td>
                                
                                <td>@Model.WebName</td>
                                <td>
                                    <img src="~/Assets/images/@Model.ParallaxImage"  style="width:100px;height:80px;border-radius:0;"/>
                                </td>
                                <td>
                                    <img src="~/Assets/images/@Model.FooterImage" style="width:100px;height:80px;border-radius:0;" />
                                </td>
                                
                                <td>@Model.PhoneNumber1</td>
                                <td>@Model.PhoneNumber2</td>
                               
                                
                                <td>@Model.Email</td>
                                <td style="text-align:center;" class="row">
                                    @foreach(var item in Model.FooterSocialMedias )
                                   {
                                       <a class="col-md-4" style="font-size:30px;" src="@item.Url">@Html.Raw(@item.Icon)</a>
                                   }
                                </td>
                                <td>
                                    <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="fas fa-edit" style="color:black;"></i>
                                    </a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    