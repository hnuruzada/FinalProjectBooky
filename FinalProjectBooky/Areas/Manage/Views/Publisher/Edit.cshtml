@model Publisher
@{
    ViewData["Title"] = "Create";
    
}

@section CSS{
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

}
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.ImageFile">Publisher Image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control col-md-2" rows="3"><br/>
            <span asp-validation-for="@Model.ImageFile" class="text-danger"  style="font-size:14px;"></span>
        </div>
       
        <div class="form-group">
            <label asp-for="@Model.Name">Publisher Name</label> <br/>
            <input type="text" asp-for="@Model.Name" id="text" placeholder="Name" rows="3"><br/>
            <span asp-validation-for="@Model.Name" class="text-danger"  style="font-size:14px;"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Surname">Publisher Surname</label><br/>
            <input type="text" asp-for="@Model.Surname" id="text" placeholder="Surname" rows="3"><br/>
            <span asp-validation-for="@Model.Surname" class="text-danger"  style="font-size:14px;"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Resume">Resume</label>
            <textarea asp-for="@Model.Resume" class="form-control" id="Resume" rows="3"></textarea><br/>
            <span asp-validation-for="@Model.Resume" class="text-danger" style="font-size:14px;"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="publisher" asp-action="index">

            <i style="font-size:0.875rem; text-decoration:none;" class="btn btn-dark">Back</i>
        </a>
    </form>

</div>



@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}



